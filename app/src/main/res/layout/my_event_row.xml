<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/my_event_row_constraint_layout">

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:gravity="center"
        android:id="@+id/event_date_text_view"
        app:layout_constraintLeft_toLeftOf="@+id/my_event_row_constraint_layout"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/my_event_row_constraint_layout"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/my_event_row_constraint_layout"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="TextView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="4dp"
        android:background="@drawable/event_display_boarder"
        android:textColor="@color/colorPrimary"
        android:id="@+id/event_summary_time_loc_text_view"
        app:layout_constraintLeft_toRightOf="@+id/event_date_text_view"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="@+id/my_event_row_constraint_layout"
        android:layout_marginTop="24dp" />

    <TextView
        android:text="TextView"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/event_month_abrv_text_view"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/event_date_text_view"
        app:layout_constraintTop_toBottomOf="@+id/event_date_text_view"
        app:layout_constraintRight_toRightOf="@+id/event_date_text_view" />

    <TextView
        android:text="TextView"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/event_day_of_week_text_view"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/event_date_text_view"
        app:layout_constraintRight_toRightOf="@+id/event_date_text_view"
        app:layout_constraintBottom_toTopOf="@+id/event_date_text_view" />


</android.support.constraint.ConstraintLayout>