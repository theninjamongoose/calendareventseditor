<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayout">

    <ImageView
        android:src="@drawable/ic_schedule_black_24dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/event_time_image_view"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/event_time_text_view" />

    <TextView
        android:text="TextView"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:id="@+id/event_time_text_view"
        app:layout_constraintLeft_toRightOf="@+id/event_time_image_view"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="24dp" />

    <ImageView
        android:src="@drawable/ic_pin_drop_black_24dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/event_location_image_view"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/event_location_text_view" />

    <TextView
        android:text="TextView"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:id="@+id/event_location_text_view"
        android:padding="4dp"
        android:background="@drawable/event_display_boarder"
        app:layout_constraintLeft_toLeftOf="@+id/event_time_text_view"
        app:layout_constraintTop_toBottomOf="@+id/event_time_text_view"
        android:layout_marginTop="32dp" />

    <ImageView
        android:src="@drawable/ic_group_black_24dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/event_attendees_image_view"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/event_attendees_text_view" />

    <TextView
        android:text="TextView"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:id="@+id/event_attendees_text_view"
        app:layout_constraintLeft_toLeftOf="@+id/event_location_text_view"
        app:layout_constraintTop_toBottomOf="@+id/event_location_text_view"
        android:layout_marginTop="32dp" />


    <ImageView
        android:src="@drawable/ic_library_books_black_24dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/event_description_image_view"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/event_description_text_view" />

    <TextView
        android:text="TextView"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:id="@+id/event_description_text_view"
        app:layout_constraintLeft_toLeftOf="@+id/event_attendees_text_view"
        app:layout_constraintTop_toBottomOf="@+id/event_attendees_text_view"
        android:layout_marginTop="32dp" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>